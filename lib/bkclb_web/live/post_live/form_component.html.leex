<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "post-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>


  <%= textarea f, :body, class: "textarea" %>
  <%= error_tag f, :body %>

  <%= hidden_input f, :parent_id %>
  <%= hidden_input f, :room_id %>

  <%= submit "Save", phx_disable_with: "Saving...", class: "button" %>
</form>
